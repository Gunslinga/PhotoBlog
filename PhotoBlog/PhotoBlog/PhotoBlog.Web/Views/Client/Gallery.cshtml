@model PhotoBlog.Models.Photo

@{
    ViewBag.Title = "Admin";
}

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <script src="~/Scripts/knockout/knockout-3.0.0.debug.js"></script>
    <script src="~/Scripts/lightbox/js/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/lightbox/js/lightbox-2.6.min.js"></script>
    <script src="~/Scripts/jquery/jquery.validate.js"></script>
    <script src="~/Scripts/client/ClientViewModel.js"></script>

    <script type="text/javascript">
        $('#footer').css('cursor', 'pointer').on('mouseover',
            function () {
                $("#footer").append('<div id="category">Nature</div>');
                $("#category").css({
                    'font-size': '3em',
                    'position': 'absolute',
                    'bottom': '30%', 'right': '20%'

                });
            }
          );

        $('#footer').css('cursor', 'pointer').on('mouseout',
            function () {
                $("#footer").html("");
            });

        $('#footer').click(function () {
            $('#wrapper').html("");
            $('#wrapper').load('@Url.Action("FirstGallery", "Client")');
        });

        //-----------------------------------------------------------------------------------------------

        $('#left').css('cursor', 'pointer').on('mouseover',
            function () {
                $("#left").append('<div id="category">Urban</div>');
                $("#category").css({
                    'font-size': '3em',
                    'position': 'absolute',
                    'top': '30%', 'left': '25%'

                });
            }
          );

        $('#left').css('cursor', 'pointer').on('mouseout',
           function () {
               $("#left").html("");
           }
         );

        $('#left').click(function () {
            $('#wrapper').html("");
            $('#wrapper').load('@Url.Action("SecondGallery", "Client")');
        });


        //-----------------------------------------------------------------------------------------------

        $('#right').css('cursor', 'pointer').on('mouseover',
            function () {
                $("#right").append('<div id="category">Abstract</div>');
                $("#category").css({
                    'font-size': '3em',
                    'position': 'absolute',
                    'top': '12%', 'right': '5%'
                });
            }
          );

        $('#right').css('cursor', 'pointer').on('mouseout',
           function () {
               $("#right").html("");
           }
         );

        $('#right').click(function () {
            $('#wrapper').html("");
            $('#wrapper').load('@Url.Action("ThirdGallery", "Client")');
        });


    </script>
}
<link href="~/Scripts/lightbox/css/lightbox.css" rel="stylesheet" />
<body>
    <div id="wrapper" class="wrapper">
        <aside id="left" class="leftColumn"></aside>
        <aside id="right" class="rightColumn"></aside>
        <footer id="footer" class="footer"></footer>
    </div>
</body>
