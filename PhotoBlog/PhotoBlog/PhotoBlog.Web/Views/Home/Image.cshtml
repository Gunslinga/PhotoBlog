@model PhotoBlog.Models.Photo

@{
    ViewBag.Title = "Admin";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="@Url.Content("~/Scripts/knockout-3.0.0.debug.js")"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script type="text/javascript">
        function ImageViewModel() {
            var self = this;
            self.photos = ko.observableArray();

            var baseUri = '@ViewBag.ApiUrl';

            self.create = function (formElement) {
                $(formElement).validate();
                if ($(formElement).valid()) {
                    $.post(baseUri, $(formElement).serialize(), null, "json")
                        .done(function (photo) {
                            self.photos.push(photo);
                        });
                }
            }

            self.update = function (photo) {
                $.ajax({ type: "PUT", url: baseUri + '/' + photo.Id, data: photo });
            }

            self.remove = function (photo) {
                $.ajax({ type: "DELETE", url: baseUri + '/' + blogPost.Id })
                    .done(function () {
                        self.blogPosts.remove(photo);
                    });
            }

            $.getJSON(baseUri, self.photos);
        }

        $(document).ready(function () {
            ko.applyBindings(new ImageViewModel());
        })
    </script>
}

<h2>Admin</h2>
<div class="content">
    <div class="float-left">
        <ul id="update-blogPosts" data-bind="foreach: photos">
            <li>
                <div>
                    <img data-bind="attr: { src: $data.Url }">
                </div>
                <input type="button" value="Update" data-bind="click: $root.update" />
                <input type="button" value="Delete Item" data-bind="click: $root.remove" />
            </li>
        </ul>
    </div>

    <div class="float-right">
        <h2>New post</h2>
        <form id="blogPost" data-bind="submit: create">
            @Html.ValidationSummary(true)
            <fieldset>
                @Html.EditorForModel()
                <p>
                    <input type="submit" value="Save" />
                </p>
            </fieldset>
        </form>
        <input id="addPhoto" type="submit" value="Add photo" />
    </div>
</div>
